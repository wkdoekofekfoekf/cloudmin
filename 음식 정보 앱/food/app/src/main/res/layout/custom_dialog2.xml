<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="25.5dp">
        <TextView
            android:id="@+id/two_button_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:layout_marginBottom="13.3dp"
            tools:text="Title"
            android:bufferType="spannable"
            />
        <TextView
            android:id="@+id/two_button_dialog_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textColor="#656565"
            android:lineSpacingExtra="7sp"
            android:gravity="center_horizontal"
            android:text="Content"
            android:layout_marginBottom="25.3dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:bufferType="spannable"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp">
            <Button
                android:id="@+id/two_button_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:text="cancel"/>
            <Button
                android:id="@+id/two_button_dialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:text=""/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>